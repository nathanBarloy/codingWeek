<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.VueMenu">
   <children>
      <BorderPane fx:id="borderpane" layoutX="-1.0" prefHeight="600.0" prefWidth="800.0">
         <center>
            <VBox alignment="CENTER" prefHeight="408.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#lancerModeTest" prefHeight="55.0" prefWidth="230.0" text="Mode Entrainement">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#evaluation" prefHeight="55.0" prefWidth="230.0" text="Mode Evaluation">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#lancerModeCreation" prefHeight="55.0" prefWidth="240.0" text="Mode Creation">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#ConsulterDecks" prefHeight="55.0" prefWidth="240.0" text="Consulter Decks">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font></Button>
                  <Button fx:id="buttonDeconnexion" mnemonicParsing="false" onAction="#deconnexion" prefHeight="50.0" prefWidth="150.0">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="80.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="buttonQuitter" alignment="CENTER" mnemonicParsing="false" onAction="#quitter" prefHeight="50.0" prefWidth="150.0">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="label" text="Label">
                     <font>
                        <Font name="MathJax_Math-Italic" size="45.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="89.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="buttonSupprimer" mnemonicParsing="false" onAction="#supprimerCompte" prefHeight="70.0" prefWidth="150.0" textAlignment="CENTER" textFill="#da0606" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="20.0" right="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
