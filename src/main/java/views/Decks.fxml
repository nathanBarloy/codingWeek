<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.VueDecks">

   <children>
      <BorderPane prefHeight="800.0" prefWidth="1000.0">
         <left>
            <VBox alignment="CENTER" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <ComboBox fx:id="comboBox" onAction="#Choisir" prefWidth="150.0" promptText="choisir deck">
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </ComboBox>
               </children>
            </VBox>
         </left>
         <right>
            <VBox alignment="CENTER" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#SupprimerCarte" prefHeight="60.0" prefWidth="150.0" text="Supprimmer la question" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="17.0" />
                     </font></Button>
               </children>
            </VBox>
         </right>
         <center>
            <ListView fx:id="listeView" prefHeight="700.0" prefWidth="569.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox alignment="CENTER_LEFT" prefHeight="156.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#Retour" prefHeight="44.0" prefWidth="121.0" text="Retour">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <top>
            <Label text="Consultation des decks" BorderPane.alignment="CENTER">
               <font>
                  <Font size="48.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="50.0" top="50.0" />
               </BorderPane.margin>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
